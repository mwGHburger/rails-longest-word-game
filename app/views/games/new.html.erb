<div class=container>
  <h1>New Game</h1>
<div class="random-letters-container">
  <% @letters.each do |letter| %>
    <ul = class="random-letters">
      <li><%=letter%></li>
    </ul>
  <% end %>
</div>
  <p>What's the longest word you can find?</p>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="grid" value=<%= @letters.join("") %>>
    <input type="text" name="word">
    <input type="submit">
  </form>
</div>
